<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main7Activity">

    <TextView
        android:textStyle="bold"
        android:background="@color/background_Colour"
        android:textColor="@color/txt_Colour"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/bacchaderdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <ImageView
        android:src="@drawable/kid"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp">

    </ImageView>
    <ImageView
        android:background="@color/background_Colour"
        android:layout_width="match_parent"
        android:layout_height="20dp">
    </ImageView>
    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:text="@string/bacchaderdad1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:text="@string/bacchaderdad2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:text="@string/bacchaderdad3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:text="@string/bacchaderdad4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

</LinearLayout>