<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
        <TextView
            android:background="@color/background_Colour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ViewFlipper
                                android:id="@+id/viewflip"
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/txt_background"
                                    android:padding="10dp"
                                    android:text="@string/headline1"
                                    android:textColor="@color/tx2_colour"
                                    android:textStyle="bold">

                                </TextView>

                                <HorizontalScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                        <LinearLayout

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:orientation="horizontal">

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                        <ImageView
                                                            android:id="@+id/datporiskar"
                                                            android:layout_width="80dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/dadt_poriskar"
                                                            android:contentDescription="TODO">

                                                        </ImageView>


                                                    <TextView
                                                        android:gravity="center"
                                                        android:textSize="10sp"
                                                        android:layout_width="80dp"
                                                        android:layout_height="20dp"
                                                        android:background="@color/dad_colour"
                                                        android:text="@string/dadporishkar"
                                                        android:textColor="@color/txt_Colour">

                                                    </TextView>


                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                       <ImageView
                                                           android:id="@+id/dadt"
                                                           android:src="@drawable/dadth_tola"
                                                           android:layout_width="80dp"
                                                           android:layout_height="80dp">

                                                       </ImageView>

                                                        <TextView
                                                            android:textSize="10sp"
                                                            android:gravity="center"
                                                            android:layout_width="80dp"
                                                            android:layout_height="20dp"
                                                            android:background="@color/dad_colour"
                                                            android:text="@string/dadtola"
                                                            android:textColor="@color/txt_Colour">

                                                        </TextView>


                                                </LinearLayout>
                                                <LinearLayout
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                        <ImageView
                                                            android:id="@+id/rootcanal"
                                                            android:layout_width="80dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/dentist">

                                                        </ImageView>

                                                        <TextView
                                                            android:textSize="10sp"
                                                            android:gravity="center"
                                                            android:layout_width="80dp"
                                                            android:layout_height="20dp"
                                                            android:background="@color/dad_colour"
                                                            android:text="@string/rootcanel"
                                                            android:textColor="@color/txt_Colour">

                                                        </TextView>


                                                </LinearLayout>
                                                <LinearLayout
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                        <ImageView
                                                            android:id="@+id/dadsil"
                                                            android:layout_width="80dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/dadt_sill">

                                                        </ImageView>

                                                        <TextView
                                                            android:textSize="10sp"
                                                            android:gravity="center"
                                                            android:layout_width="80dp"
                                                            android:layout_height="20dp"
                                                            android:background="@color/dad_colour"
                                                            android:text="@string/dadsil"
                                                            android:textColor="@color/txt_Colour">

                                                        </TextView>


                                                </LinearLayout>
                                                <LinearLayout
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                        <ImageView
                                                            android:id="@+id/dadbandai"
                                                            android:layout_width="80dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/icon2">

                                                        </ImageView>

                                                        <TextView
                                                            android:textSize="10sp"
                                                            android:gravity="center"
                                                            android:layout_width="80dp"
                                                            android:layout_height="20dp"
                                                            android:background="@color/dad_colour"
                                                            android:text="@string/dadbadhai"
                                                            android:textColor="@color/txt_Colour">

                                                        </TextView>


                                                </LinearLayout>
                                                <LinearLayout
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                        <ImageView
                                                            android:id="@+id/kid"
                                                            android:layout_width="80dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/kid">

                                                        </ImageView>

                                                        <TextView
                                                            android:textSize="10sp"
                                                            android:gravity="center"
                                                            android:layout_width="80dp"
                                                            android:layout_height="20dp"
                                                            android:background="@color/dad_colour"
                                                            android:text="@string/bacchaderdad"
                                                            android:textColor="@color/txt_Colour">

                                                        </TextView>


                                                </LinearLayout>
                                                <LinearLayout
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                        <ImageView
                                                            android:id="@+id/other"
                                                            android:layout_width="80dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/other">

                                                        </ImageView>

                                                        <TextView
                                                            android:textSize="10sp"
                                                            android:gravity="center"
                                                            android:layout_width="80dp"
                                                            android:layout_height="20dp"
                                                            android:background="@color/dad_colour"
                                                            android:text="@string/other"
                                                            android:textColor="@color/txt_Colour">

                                                        </TextView>


                                                </LinearLayout>


                                        </LinearLayout>



                                </HorizontalScrollView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/txt_background"
                                    android:padding="10dp"
                                    android:text="@string/headline2"
                                    android:textColor="@color/tx2_colour"
                                    android:textStyle="bold">

                                </TextView>
                                <LinearLayout
                                    android:layout_margin="10dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                        <ImageView

                                            android:src="@drawable/doctor"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp">

                                        </ImageView>
                                        <TextView
                                            android:paddingLeft="5dp"
                                            android:textStyle="bold"
                                            android:textSize="12sp"
                                            android:text="@string/headline3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                        </TextView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_margin="10dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                        <ImageView

                                            android:src="@drawable/dentistchair"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp">

                                        </ImageView>
                                        <TextView
                                            android:paddingLeft="5dp"
                                            android:textStyle="bold"
                                            android:textSize="12sp"
                                            android:text="@string/headline4"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                        </TextView>



                                </LinearLayout>
                                <LinearLayout
                                    android:layout_margin="10dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                        <ImageView

                                            android:src="@drawable/taka"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp">

                                        </ImageView>
                                        <TextView
                                            android:paddingLeft="5dp"
                                            android:textStyle="bold"
                                            android:textSize="12sp"
                                            android:text="@string/headline5"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                        </TextView>



                                </LinearLayout>
                                <LinearLayout
                                    android:layout_margin="10dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                        <ImageView

                                            android:src="@drawable/kom"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp">

                                        </ImageView>
                                        <TextView
                                            android:paddingLeft="5dp"
                                            android:textStyle="bold"
                                            android:textSize="12sp"
                                            android:text="@string/headline6"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                        </TextView>



                                </LinearLayout>
                                <ImageView
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/tick"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">
                                </ImageView>
                                <TextView
                                    android:textColor="@color/tx2_colour"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:text="@string/headline7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:paddingLeft="10dp"
                                    android:textSize="12sp"
                                    android:text="@string/headline8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <ImageView
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/worldwide"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">
                                </ImageView>
                                <TextView
                                    android:textColor="@color/tx2_colour"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:text="@string/headline9"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_margin="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                        <ImageView
                                            android:src="@drawable/phone"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp">
                                        </ImageView>
                                        <TextView
                                            android:paddingLeft="5dp"
                                            android:textStyle="bold"
                                            android:textSize="12sp"
                                            android:text="@string/headline10"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                        </TextView>
                                </LinearLayout>
                            <ImageView
                                android:background="#FAF6F6"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">
                            </ImageView>
                        </LinearLayout>
                </ScrollView>
        </LinearLayout>

</LinearLayout>